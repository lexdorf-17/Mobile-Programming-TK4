<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/greyBd">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#06B0F7" />
            <gradient android:angle="-90" android:startColor="#06B0F7" android:endColor="#06B0F7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#06B0F7" />
            <solid android:color="#06B0F7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#06B0F7" />
            <gradient android:angle="-90" android:startColor="#06B0F7" android:endColor="#06B0F7" />
        </shape>
    </item>
</ripple>